<PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:title="Account">

        <Preference
            app:key="change_username"
            app:title="Change Username"
            app:summary="Change your username" />

        <Preference
            app:key="change_password"
            app:title="Change Password"
            app:summary="Change your password" />

        <Preference
            app:key="logout"
            app:title="Logout"
            app:summary="Logout from your account" />

        <Preference
            app:key="delete_account"
            app:title="Delete Account"
            app:summary="Permanently delete your account" />

    </PreferenceCategory>

    <PreferenceCategory
        app:title="Settings">

        <CheckBoxPreference
            app:key="notifications"
            app:title="Notifications"
            app:summary="Enable/disable notifications"/>

        <SwitchPreferenceCompat
            app:key="theme"
            app:title="Dark Mode"
            app:summaryOn="Enable dark mode"
            app:summaryOff="Disable dark mode"/>

    </PreferenceCategory>

    <PreferenceCategory
        app:title="Support">

    </PreferenceCategory>

</PreferenceScreen>