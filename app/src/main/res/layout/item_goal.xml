<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <!-- Importance -->
    <TextView
        android:id="@+id/textViewGoalImportance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#"
        android:textStyle="bold"
        android:textSize="18sp"/>

    <!-- Title and Details -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="16dp">

        <!-- Title -->
        <TextView
            android:id="@+id/textViewGoalTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textStyle="bold"
            android:textSize="18sp"/>

        <!-- Details (Description, Deadline, Milestone, Status) -->
        <TextView
            android:id="@+id/textViewGoalDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="- Description"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/textViewGoalDeadline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="- Deadline"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/textViewGoalMilestone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="- Milestone"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/textViewGoalStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="- Status"
            android:textSize="14sp"/>
    </LinearLayout>

</LinearLayout>
